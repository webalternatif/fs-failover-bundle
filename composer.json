{
    "name": "webalternatif/fs-failover-bundle",
    "description": "A bundle to create failover flysystem adapters.",
    "type": "symfony-bundle",
    "license": "MIT",
    "require": {
        "php": "8.0.*",
        "league/flysystem": "^2.0",
        "symfony/config": "^4.4 || ^5.2",
        "symfony/console": "^4.4 || ^5.2",
        "symfony/dependency-injection": "^4.4 || ^5.2",
        "symfony/event-dispatcher": "^4.4 || ^5.2",
        "symfony/http-kernel": "^4.4 || ^5.2",
        "symfony/messenger": "^4.4 || ^5.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18",
        "league/flysystem-memory": "2.1.0-alpha.1",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.15.1",
        "vimeo/psalm": "^4.6"
    },
    "repositories": [
        {
            "type": "github",
            "url": "https://github.com/chapa/flysystem-memory.git"
        }
    ],
    "scripts": {
        "cs-check": "php-cs-fixer fix --dry-run",
        "cs-fix": "php-cs-fixer fix",
        "test": ["@psalm", "@phpunit", "@cs-check"],
        "psalm": "psalm --threads=$(nproc) --no-cache",
        "phpunit": "./bin/phpunit --coverage-text"
    },
    "autoload": {
        "psr-4": {
            "Webf\\FsFailoverBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Webf\\FsFailoverBundle\\": "tests"
        }
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    }
}
